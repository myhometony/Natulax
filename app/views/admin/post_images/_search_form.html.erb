<div class="m-3">
  <%= search_form_for search, url:url do |f| %>
    <i class="fa-solid fa-magnifying-glass"></i>
    <%= f.search_field :title_cont, placeholder:"タイトル検索" %><%# _contはidでない文字列のときに使う%>
    <%= f.collection_select :category_id_eq,Category.all,:id,:name,include_blank: 'カテゴリ指定なし' %>
    <%= f.submit '検索',class:"btn btn-primary" %>
  <% end %>
</div>