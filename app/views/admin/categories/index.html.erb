<div class="container">
  <h4>カテゴリ一覧</h4>
  <div class="form-inline">
    <%= form_with model: @category, url:admin_categories_path do |f| %>
      <%= f.text_field :name ,placeholder:"カテゴリ名を入力"%>
      <%= f.submit "新規作成",class:"btn btn-primary" %>
    <% end %>
    <%= search_form_for @search, url:admin_categories_path, class:"ml-3 pt-1" do |f| %>
      <i class="fa-solid fa-magnifying-glass"></i>
      <%= f.search_field :name_cont, placeholder:"カテゴリ検索" %><%# _contはidでない文字列のときに使う%>
      <%= f.submit '検索',class:"btn btn-primary" %>
    <% end %>
  </div>
  <% if @results.length !=0 %>
    <table class="table text-center col-6">
      <thead>
        <tr class="table-info">
          <th>カテゴリ名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |category| %>
          <tr>
      　     <td><%= category.name %></td>
      　     <td><%= link_to "編集", edit_admin_category_path(category.id),class:"btn btn-success" %></td>
    　     </tr>
    　   <% end %>
      </tbody>
    </table>
    <%= paginate @results %>
  <% else %>
    該当するユーザが見つかりませんでした。
  <% end %>
</div>