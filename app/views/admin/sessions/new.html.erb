<div class="container">
  <h4>管理者ログイン</h4>
  <%= form_with model:@admin, url: admin_session_path do |f| %>
  <div>
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder:"メールアドレスを入力" %>
  </div>
  <div>
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"パスワードを入力" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div>
      <%= f.check_box :remember_me %>
      <%= f.label :パスワードを記憶する %>
    </div>
  <% end %>
  <div class="pt-3">
    <%= f.submit "ログイン" %>
  </div>
  <% end %>
  <div class="pt-3 pb-3">
    <%= render "admin/shared/links" %>
  </div>
</div>