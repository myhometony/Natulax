<!DOCTYPE html>
<html>
  <head>
    <title>Natulax</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">

    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">

    <header class="bg-success"><%= render 'layouts/header' %></header>

    <p class="notice text-success text-center m-3"><%= notice %></p>
    <p class="alert text-danger text-center"><%= alert %></p>

    <main class="mb-auto text-break"><%= yield %></main>

    <footer class="bg-success pt-5 pb-4"></footer>

  </body>
</html>
