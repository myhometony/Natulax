<div class="container">
  <h4>新規登録</h4>
  <%= form_with model:@end_user, url:end_user_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div>
    <%= f.label :ユーザ名 %><br />
    <%= f.text_field :name, placeholder:"ユーザ名を入力" %>
  </div>
  <div>
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder:"メールアドレスを入力" %>
  </div>
  <div>
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワードを入力" %>
  </div>
  <div>
    <%= f.label :パスワード確認%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"再度パスワードを入力" %>
  </div>
  <div class="pt-3">
    <%= f.submit "入力確定",class:"btn btn-primary" %>
  </div>
  <% end %>
  <div class="pt-3 pb-3">
    <%= render "public/shared/links" %>
  </div>
</div>