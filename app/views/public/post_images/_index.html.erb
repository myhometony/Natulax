<div class="card-columns p-3">
  <% post_images.each do |post_image| %>
  <div class="card">
      <%= link_to public_post_image_path(post_image.id) do %>
        <%= image_tag post_image.get_image(400,400), class:"card-img-top" %>
      <% end %>
    <div class="card-body">
      <b><i class="fa-solid fa-camera"></i>:<%= post_image.title %></b>
      <p><%= post_image.caption %></p>
      <span>
        <%= link_to public_end_user_path(post_image.end_user.id) do %>
          <%= image_tag post_image.end_user.get_profile_image(50,50), class:"m-3 rounded-circle border" %>
          <%= post_image.end_user.name %>
        <% end %>
         |
        <span class="favorite-btn_<%= post_image.id %>">
          <%= render 'public/favorites/favorite-btn', post_image: post_image %>
        </span>
         |
        <%= link_to  public_post_image_path(post_image.id) do %>
          <i class="fa-regular fa-comment-dots"></i><%= post_image.comments.count %> コメント
        <% end %>
      </span>
    </div>
  </div>
  <% end %>
</div>