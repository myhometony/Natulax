<div>
  <%= image_tag @post_image.get_image(300,300) %>
  <p>タイトル：<%= @post_image.title %></p>
  <p>カテゴリ：<%= @post_image.category.name %></p>
  <p>説明：<%= @post_image.caption %></p>
  <p>投稿ユーザー画像：<%= image_tag @post_image.end_user.get_profile_image(100,100) %>
  <p>ユーザーネーム：<%= @post_image.end_user.name %></p>
  <p>投稿日：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
  <% if @post_image.end_user == current_end_user %>
  　<%= link_to "編集", edit_public_post_image_path(@post_image) %>
    <%= link_to "削除", public_post_image_path(@post_image), method: :delete %>
  <% end %>
  <% if @post_image.favorited_by?(current_end_user) %>
    <p>
      <%= link_to public_post_image_favorites_path(@post_image), method: :delete do %>
        ♥<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to public_post_image_favorites_path(@post_image), method: :post do %>
        ♡<%= @post_image.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
</div>

<div>
  <p>コメント件数：<%= @post_image.comments.count %></p>
  <% @post_image.comments.each do |comment| %>
    <p><%= image_tag comment.end_user.get_profile_image(100,100) %></p>
    <%= comment.end_user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.text %>
    <% if comment.end_user == current_end_user %>
      <%= link_to "削除", public_post_image_comment_path(comment.post_image, comment), method: :delete %>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_with model: [@post_image, @comment], url:public_post_image_comments_path(@post_image) do |f| %>
    <%= f.text_area :text, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>