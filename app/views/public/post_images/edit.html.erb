<h2>投稿画像編集</h2>
<%= form_with model: @post_image, url: public_post_image_path do |f| %>
  <label for="inputTitle">タイトル</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"タイトル"%>
    <label for="inputCategory_id">カテゴリ</label>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <label for="inpuCaption">説明文</label>
  <%= f.text_field :caption, autofocus: true, id:"inputCaption", placeholder:"説明文"%>
  <label for="inputImage">投稿画像</label>
  <%= f.file_field :image, placeholder: "投稿画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>