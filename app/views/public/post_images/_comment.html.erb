<div class="col">

  <% post_image.comments.each do |comment| %>
    <p>
      <%= link_to public_end_user_path do %>
        <%= image_tag comment.end_user.get_profile_image(50,50),class:"rounded-circle border" %>
      <% end %>
      <%= comment.text %>
    </p>
    <span>
    <%= comment.end_user.name %>
    |
    <%= comment.created_at.strftime('%Y.%m.%d') %>
    </span>

    <% if comment.end_user == current_end_user %>
      <%= link_to "削除", public_post_image_comment_path(comment.post_image, comment), method: :delete %>
    <% end %>
  <% end %>

</div>
<div>
  <%= form_with model: [post_image, comment], url:public_post_image_comments_path(post_image) do |f| %>
    <%= f.text_area :text, rows: '2', placeholder: "コメントを記入" %>
    <%= f.submit "送信する",class:"btn btn-primary" %>
  <% end %>
</div>
