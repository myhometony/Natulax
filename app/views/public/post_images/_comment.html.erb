
<div class="col-6 m-3 card">
  <h5 class="mt-3">コメント一覧</h5>
  <div class="m-3">
  <%= form_with model: [post_image, comment], url:public_post_image_comments_path(post_image), class:"form-inline" do |f| %>
    <%= f.text_area :text, placeholder: "コメントを入力", class:"form-control" %>
    <%= f.submit "送信する",class:"btn btn-primary m-3" %>
  <% end %>
  </div>
  <% post_image.comments.reverse.each do |comment| %> <!--.reverse.eachで順番逆-->
    <div class="card m-3 p-1">
      <p><%= comment.text %></p>
      <span>
        <%= link_to public_end_user_path do %>
         <%= image_tag comment.end_user.get_profile_image(50,50),class:"rounded-circle border bd-placeholder-img mr-3" %>
        <% end %>
        <%= comment.end_user.name %>
        |
        <%= comment.created_at.strftime('%Y.%m.%d') %>
        |
        <% if comment.end_user == current_end_user %>
          <%= link_to "削除", public_post_image_comment_path(comment.post_image, comment), method: :delete, class:"text-danger" %>
        <% end %>
      </span>
    </div>
  <% end %>
</div>



