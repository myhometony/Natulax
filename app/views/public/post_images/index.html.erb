<%= search_form_for @search, url: search_public_post_images_path do |f| %>

  <%= f.search_field :title_cont%>

  <%# _contはidじゃなくて文字列のときに使う%>
  <p>カテゴリー検索</p>
  <%= f.label '酸味'%>
  <%= f.collection_select :category_id_eq,Category.all,:id,:name,include_blank: '指定なし' %>

  <%= f.submit '検索' %>
<% end %>

<%= render 'index', post_images:@post_images %>