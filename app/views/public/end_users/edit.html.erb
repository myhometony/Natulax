<div class="container">
  <div class="row">
    <h4>プロフィール編集</h4>
  </div>
  <div class="row">
    <%= form_with model: @end_user, url: public_end_user_path do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="form_group">
      <label for="inputName">ユーザ名</label>
      <%= f.text_field :name, id:"inputName", placeholder:"ユーザ名を入力",class:"form-control" %>
    </div>
    <div class="form_group mt-3">
      <label for="inputIntroduction">紹介文</label>
      <%= f.text_field :introduction,id:"inputIntroduction", placeholder:"紹介文を入力",class:"form-control" %>
    </div>
    <div class="form_group mt-3">
      <label for="inputProfileimage">プロフィール画像</label>
      <%= f.file_field :profile_image, accept: "image/*", id:"inputProfileimage",class:"form-control-file" %>
    </div>
    <%= f.submit "変更を保存",class:"btn btn-primary mt-3"  %>
    <% end %>
  </div>
  <div class="row pt-3 pb-3">
    <%= link_to "退会の方はこちら", public_end_users_unsubscribe_path, class:"text-danger" %>
  </div>
</div>