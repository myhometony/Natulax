  <% post_image.comments.reverse.each do |comment| %> <!--.reverse.eachで順番逆-->
    <div class="card m-3 p-1">
      <p>
        <% if comment.end_user.name == "ナチュラ君" %>
          <%= comment.text %>ゲコ
        <% else %>
          <%= comment.text %>
        <% end %>
      </p>
      <span>
        <%= link_to public_end_user_path(comment.end_user.id) do %>
         <%= image_tag comment.end_user.get_profile_image(50,50),class:"rounded-circle border bd-placeholder-img mr-3" %>
        <% end %>
        <%= comment.end_user.name %>
        |
        <%= comment.created_at.strftime('%Y.%m.%d') %>
        |
        <% if comment.end_user == current_end_user %>
          <%= link_to "削除", public_post_image_comment_path(comment.post_image, comment), method: :delete, remote: true, class:"text-danger" %>
        <% end %>
      </span>
    </div>
  <% end %>